<div class="container">
  <div class="container">
  <div class="tab d-flex">
    <button class="tablinks histoire">Histoire</button>
    <button class="tablinks geo">Géographie</button>
    <button class="tablinks emc">EMC</button>
  </div>

  <div class="all-cours">
    <div id="Histoire" class="tabcontent not-displayed rounded">
      <h2 class="title-cours">Histoire</h2>
      <% if !@hit_cours.empty? %>
          <% @hit_cours.each do |c| %>

            <%= link_to cour_path(c.id), class:'cours-link' do %>
              <div class="card-product">
                <img src="<%= c.img %>" />
                <div class="card-product-infos">
                  <h2><%= c.name %></h2>
                </div>
              </div>
            <% end %>
          <% end %>
      <% else %>
        <p>Pas de cours d'histoire pour le moment</p>
      <% end %>
    </div>

    <div id="Géographie" class="tabcontent not-displayed rounded">
      <h2 class="title-cours">Géographie</h2>
      <% if !@geo_cours.empty? %>
        <% @geo_cours.each do |c| %>
          <%= link_to cour_path(c.id), class:'cours-link' do %>
            <div class="card-product">
              <img src="<%= c.img %>" />
              <div class="card-product-infos">
                <h2><%= c.name %></h2>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <p>Pas de cours de géographie pour le moment</p>
      <% end %>
    </div>

    <div id="EMC" class="tabcontent not-displayed rounded">
      <h2 class="title-cours">EMC</h2>
      <% if !@emc_cours.empty? %>
        <% @emc_cours.each do |c| %>
          <%= link_to cour_path(c.id), class:'cours-link' do %>
            <div class="card-product">
              <img src="<%= c.img %>" />
              <div class="card-product-infos">
                <h2><%= c.name %></h2>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <p>Pas de cours d'EMC pour le moment</p>
      <% end %>
    </div>
  </div>
</div>
