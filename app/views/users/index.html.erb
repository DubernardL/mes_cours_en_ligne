<div class="container">
  <h1 class="title-tab">Gestion des utilisateurs</h1>
  <ul class="list-group user-list">
    <% @users.each do |user| %>

  <!-- MODAL DELETE -->
      <div id="modal-<%= user.id %>" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h3 class="modal-title" id="exampleModalLongTitle">Supprimer cet utilisateur ?</h3>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <p>Voulez vous vraiment supprimer cet utilisateur ?</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
              <%= button_to user_path(user), method: :delete, class:"btn btn-danger" do %>
                Supprimer
              <% end %>
            </div>
          </div>
        </div>
      </div>
  <!-- MODAL DELET FINISH -->


      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="d-flex"><%= user.username %> (<%= user.status %>)</div>
        <% if user != current_user %>
          <span>
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal-<%= user.id %>">
              Supprimer
            </button>
          </span>
        <% end %>
      </li>
    <% end %>
  </ul>

  <div class="btn-center">
    <%= button_to "CrÃ©er un nouvel utilisateur", new_user_path, method: :get, class: "btn" %>
  </div>

</div>
