<div class="container">
  <%= simple_form_for @cours do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :category, label:"Matière", collection: ["Histoire", "Géographie", "EMC"] %>
      <%= f.input :name,  required: true %>
      <%= f.input :level,  required: true %>
      <%= f.input :file, as: :file %>
      <%= f.input :description %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Mettre à jour" %>
    </div>
  <% end %>
</div>
