<div class="container">
  <div class="container">
  <div class="tab d-flex justify-content-between">
    <button class="tablinks active">Histoire</button>
    <button class="tablinks">Géographie</button>
    <button class="tablinks">EMC</button>
  </div>

  <div id="Histoire" class="tabcontent not-displayed rounded">
    <h2>Histoire</h2>
    <% if !@hit_cours.empty? %>
      <ul class="list-group">
        <% @hit_cours.each do |c| %>
          <%= link_to cour_path(c.id), class:'cours-link' do %>
            <li class="list-group-item"><%= c.name %></li>
          <% end %>
        <% end %>
      </ul>
    <% else %>
      <p>Pas de cours d'histoire pour le moment !</p>
    <% end %>
  </div>

  <div id="Géographie" class="tabcontent not-displayed rounded">
    <h2>Géographie</h2>
    <% if !@geo_cours.empty? %>
      <ul class="list-group">
        <% @geo_cours.each do |c| %>
          <%= link_to cour_path(c.id), class:'cours-link' do %>
            <li class="list-group-item"><%= c.name %></li>
          <% end %>
        <% end %>
      </ul>
    <% else %>
      <p>Pas de cours de géo pour le moment !</p>
    <% end %>
  </div>

  <div id="EMC" class="tabcontent not-displayed rounded">
    <h2>EMC</h2>
    <% if !@emc_cours.empty? %>
      <ul class="list-group">
        <% @emc_cours.each do |c| %>
          <%= link_to cour_path(c.id), class:'cours-link' do %>
            <li class="list-group-item"><%= c.name %></li>
          <% end %>
        <% end %>
      </ul>
    <% else %>
      <p>Pas de cours d'EMC pour le moment !</p>
    <% end %>
  </div>

  <%= button_to "Créer un cours", new_cour_path, method: :get, class: "btn btn-secondary" %>

</div>
